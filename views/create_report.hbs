<h1>Generate Refugee Report</h1>

<form action="/report/create" method="post" id="createReport">
    <fieldset>
		<legend>Create a new refugee report</legend>
		<div>
			<!-- FIXME: better way to associate Refugee with report-->
			<label for='refugee_id'>Refugee Name:</label>
			<input type="text" name="refugee_id">
		</div>
		<div>
			<label for='location_name'>Location Name:</label>
			<input type="text" name="location_name">
		</div>
		<div>
			<label for='longitude'>Longitude:</label>
			<input type="text" name="longitude">
		</div>
		<div>
			<label for='latitude'>Latitude:</label>
			<input type="text" name="latitude">
		</div>
		<div>
			<label for='description'>Description:</label>
			<textarea rows="4" cols="50" name="description" form="createReport" >
		</div>
		<input type="submit" value="Submit">
    </fieldset>	
</form>